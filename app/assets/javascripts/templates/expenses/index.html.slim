accordion.accordion-sections
  accordion-group
    accordion-heading Add new Â»
    form.flex.horizontal ng-submit="addExpense()"
      .input-wrapper.flex-1
        input ng-model="newExpense.description" name="description" type="text" placeholder="Expense name"
      input.btn.btn-success type="submit" value="Save"
      input.btn.btn-error type="reset" value="Cancel"

  accordion-group
    accordion-heading Search

    .col-md-6.col-md-offset-3
      h1.title Search
      form
        label.label for="query" class="sr-only" Keywords
        .input-wrapper
          input#query ng-model="query" ng-model-options="{ debounce: { 'default': 200 } }" name="query" type="text" autofocus="true" placeholder="Expense name"

    ul.list-unstyled
      li ng-repeat="expense in expenses"
        section.well.col-md-6.col-md-offset-3
          a href="#/expenses/{{ expense.id }}" {{ expense.description }}
          button.btn.btn-info Edit
          button.btn.btn-danger Delete
